<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Основные" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="live"
        android:title="Онлайн-Мониторинг" />

		<PreferenceScreen android:title="Параметры мониторинга" >
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="period"
				android:numeric="integer"
				android:summary="Миллисекунды"
				android:title="Период опроса GPS" android:defaultValue="5000" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="distance"
				android:numeric="integer"
				android:summary="Метры"
				android:title="Дистанция опроса GPS" android:defaultValue="50" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="speedbearing"
				android:summary="Километров в час"
				android:title="Скорость учета курса" android:defaultValue="10" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="bearing"
				android:numeric="integer"
				android:summary="Градусы"
				android:title="Отклонение курса" android:defaultValue="315" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="hdop"
				android:numeric="integer"
				android:summary="Метры"
				android:title="Допустимая точность" android:defaultValue="50" />
			<EditTextPreference
				android:key="speed"
				android:title="Минимальная скорость отправки"
				android:summary="Километров в час"
				android:digits="0123456789"
				android:inputType="number"
				android:defaultValue="0" />
			<CheckBoxPreference
				android:key="usebuffer"
				android:summary="Увеличит траффик"
				android:title="Передавать неотправленное"
				android:defaultValue="false" />
		</PreferenceScreen>

    <CheckBoxPreference
		android:defaultValue="false"
		android:key="gpx"
		android:summary="Сохраняется на карте памяти в папке OsMoDroid"
		android:title="Локальный трек" />

		<PreferenceScreen android:title="Параметры локального трека">
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="period_gpx"
				android:numeric="integer"
				android:summary="Миллисекунды"
				android:title="Период опроса GPS" android:defaultValue="0" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="distance_gpx"
				android:numeric="integer"
				android:summary="Метры"
				android:title="Дистанция опроса GPS" android:defaultValue="0" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="speedbearing_gpx"
				android:summary="километров в час"
				android:title="Скорость учета курса" android:defaultValue="0" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="bearing_gpx"
				android:numeric="integer"
				android:summary="Градусы"
				android:title="Отклонение курса" android:defaultValue="15" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="hdop_gpx"
				android:numeric="integer"
				android:summary="Метры"
				android:title="Допустимая точность" android:defaultValue="50" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="speed_gpx"
				android:numeric="integer"
				android:summary="Километров в час"
				android:title="Минимальная скорость записи"
				android:defaultValue="1" />
		</PreferenceScreen>

		<PreferenceScreen android:title="Идентификация" >
			<EditTextPreference
				android:key="hash"
				android:title="Ваш хэш" />
			<EditTextPreference
				android:key="n"
				android:title="Контрольное число" />
			<!--<EditTextPreference android:key="login" android:title="Логин на esya.ru"/>-->
		</PreferenceScreen>

		<PreferenceScreen android:title="Оповещение" >
			<CheckBoxPreference
				android:key="vibrate"
				android:title="Вибрировать при потере интернета или GPS" android:defaultValue="false" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="vibratetime"
				android:numeric="integer"
				android:summary="Миллисекунды"
				android:title="Период вибрации"
				android:defaultValue="400" />
			<CheckBoxPreference
				android:key="playsound"
				android:title="Издавать звуки при потере интернета и GPS"
				android:defaultValue="false" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="notifyperiod"
				android:numeric="integer"
				android:summary="Миллисекунды"
				android:title="Период определения недоступности GPS"
				android:defaultValue="60000" />
			<CheckBoxPreference
				android:key="sendsound"
				android:title="Звук при отправке"
				android:defaultValue="true"/>
			<CheckBoxPreference
				android:key="usetts"
				android:summary="Используется text-to-speech"
				android:title="Проговаривать скорость"
				android:defaultValue="false" />
		</PreferenceScreen>

    <CheckBoxPreference
        android:key="usewake"
        android:summary="Увеличивает расход энергии"
        android:title="Не гасить подсветку" android:defaultValue="false" />
    <CheckBoxPreference
        android:key="usecourse"
        android:summary="Увеличивает расход энергии"
        android:title="Использовать изменение курса" android:defaultValue="false" />
    <CheckBoxPreference
		android:key="usenetwork"
		android:summary="Использовать для определения координат"
		android:title="Беспроводные сети"
		android:defaultValue="true" />
    <CheckBoxPreference
		android:key="im"
		android:title="Обмен сообщениями"
		android:defaultValue="false" />
    <CheckBoxPreference
		android:key="autostart"
		android:title="Автозагрузка"
		android:defaultValue="false" />
</PreferenceScreen>