<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Основные" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="live"
        android:title="Онлайн-Мониторинг" />

		<PreferenceScreen android:title="Параметры мониторинга" >
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="period"
				android:numeric="integer"
				android:summary="Миллисекунды"
				android:title="Период опроса GPS" android:defaultValue="5000" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="distance"
				android:numeric="integer"
				android:summary="Метры"
				android:title="Дистанция опроса GPS" android:defaultValue="50" />
                        <EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="bearing"
				android:numeric="integer"
				android:summary="Градусы"
				android:title="Отклонение курса" android:defaultValue="30" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="speedbearing"
				android:summary="Километров в час"
				android:title="Скорость учета курса" android:defaultValue="10" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="hdop"
				android:numeric="integer"
				android:summary="Метры"
				android:title="Допустимая точность" android:defaultValue="50" />
			<EditTextPreference
				android:key="speed"
				android:title="Минимальная скорость отправки"
				android:summary="Километров в час"
				android:digits="0123456789"
				android:inputType="number"
				android:defaultValue="0" />
			<CheckBoxPreference
				android:key="usebuffer"
				android:title="Передавать неотправленное"
                                android:summary="Полезно, если нестабильная связь с интернетом. Немного увеличивается интернет-трафик."
				android:defaultValue="false" />
		</PreferenceScreen>

    <CheckBoxPreference
		android:defaultValue="false"
		android:key="gpx"
		android:summary="GPS-трек в формате gpx cохраняется на карте памяти (/sdcard/OsMoDroid/)"
		android:title="Локальная запись" />

		<PreferenceScreen android:title="Параметры локальной записи">
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="period_gpx"
				android:numeric="integer"
				android:summary="Миллисекунды"
				android:title="Период опроса GPS" android:defaultValue="0" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="distance_gpx"
				android:numeric="integer"
				android:summary="Метры"
				android:title="Дистанция опроса GPS" android:defaultValue="0" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="bearing_gpx"
				android:numeric="integer"
				android:summary="Градусы"
				android:title="Отклонение курса" android:defaultValue="30" />
                        <EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="speedbearing_gpx"
				android:summary="километров в час"
				android:title="Скорость учета курса" android:defaultValue="10" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="hdop_gpx"
				android:numeric="integer"
				android:summary="Метры"
				android:title="Допустимая точность" android:defaultValue="50" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="speed_gpx"
				android:numeric="integer"
				android:summary="Километров в час"
				android:title="Минимальная скорость записи"
				android:defaultValue="0" />
		</PreferenceScreen>

		<PreferenceScreen android:title="Идентификация" >
			<EditTextPreference
				android:key="hash"
				android:title="Хэш" />
			<EditTextPreference
				android:key="n"
				android:title="Контрольное число" />
		</PreferenceScreen>

		<PreferenceScreen android:title="Оповещение" >
			<CheckBoxPreference
				android:key="vibrate"
				android:title="Вибрировать при потере интернета или GPS" android:defaultValue="false" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="vibratetime"
				android:numeric="integer"
				android:summary="Миллисекунды"
				android:title="Период вибрации"
				android:defaultValue="400" />
			<CheckBoxPreference
				android:key="playsound"
				android:title="Издавать звуки при потере интернета и GPS"
				android:defaultValue="false" />
			<EditTextPreference
				android:digits="0123456789"
				android:inputType="number"
				android:key="notifyperiod"
				android:numeric="integer"
				android:summary="Миллисекунды"
				android:title="Период определения недоступности GPS"
				android:defaultValue="60000" />
			<CheckBoxPreference
				android:key="sendsound"
				android:title="Звук при отправке"
				android:defaultValue="true"/>
			<CheckBoxPreference
				android:key="usetts"
				android:summary="Используется text-to-speech"
				android:title="Проговаривать скорость"
				android:defaultValue="false" />
			<CheckBoxPreference android:key="silentnotify" android:title="Беззвучное оповещение" android:defaultValue="false"/><CheckBoxPreference android:key="onlinenotify" android:title="Оповещать об онлайн" android:defaultValue="false" android:summary="Оповещение о смене статуса онлайн ваших устройств"/><CheckBoxPreference android:key="statenotify" android:title="Оповещать о мониторинге" android:defaultValue="true" android:summary="Оповещение о смене статуса мониторинга ваших устройств"/>
		</PreferenceScreen>

    <CheckBoxPreference
        android:key="usewake"
        android:summary="Увеличивает расход энергии"
        android:title="Не гасить подсветку"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:key="usecourse"
        android:summary="Глобальная настройка, увеличивает расход энергии"
        android:title="Использовать изменение курса"
        android:defaultValue="false" />
    <CheckBoxPreference
		android:key="usenetwork"
		android:summary="Использовать для определения координат сотовые сети и wifi"
		android:title="Беспроводные сети"
		android:defaultValue="true" />
    <CheckBoxPreference
		android:key="im"
                android:summary="Подписка на мгновенное получение"
		android:title="Обмен сообщениями"
		android:defaultValue="false" />
    <CheckBoxPreference
		android:key="autostart"
                android:summary="Запускать фоновый сервис при включении телефона"
		android:title="Автозагрузка"
		android:defaultValue="false" />
</PreferenceScreen>