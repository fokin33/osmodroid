<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Основные" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="live"
        android:title="Передавать положение" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="gpx"
        android:title="Сохранять трек" />
    <CheckBoxPreference
        android:key="usewake"
        android:summary="Увеличит расход батарейки"
        android:title="Не спать постоянно" android:defaultValue="false"/>
    <CheckBoxPreference
        android:key="usecourse"
        android:summary="Может больше тратить батарею"
        android:title="Использовать изменение курса" android:defaultValue="false"/>
    <CheckBoxPreference
        android:key="usebuffer"
        android:summary="Увеличит траффик"
        android:title="Передавать неотправленное" android:defaultValue="false"/>

    <PreferenceScreen android:title="Идентификация" >
        <EditTextPreference
            android:key="hash"
            android:title="Ваш хэш" >
        </EditTextPreference>
        <EditTextPreference
            android:key="n"
            android:title="Контрольное число" >
        </EditTextPreference>
        <EditTextPreference android:key="login" android:title="Логин на сайт"/>
    </PreferenceScreen>
    <PreferenceScreen android:title="Параметры передачи" >
        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="period"
            android:numeric="integer"
            android:summary="Миллисекунды"
            android:title="Период опроса GPS" android:defaultValue="5000">
        </EditTextPreference>
        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="distance"
            android:numeric="integer"
            android:summary="Метры"
            android:title="Дистанция опроса GPS" android:defaultValue="0">
        </EditTextPreference>
        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="speedbearing"
            
            android:summary="километров в час"
            android:title="Скорость учета курса" android:defaultValue="0"/>
        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="bearing"
            android:numeric="integer"
            android:summary="Градусы"
            android:title="Отклонение курса" android:defaultValue="3"/>
        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="hdop"
            android:numeric="integer"
            android:summary="Метры"
            android:title="Допустимая точность" android:defaultValue="50"/>
    <EditTextPreference android:key="speed" android:title="Минимальная скорость отправки" android:summary="километров в час" android:digits="0123456789" android:inputType="number" android:defaultValue="0"/></PreferenceScreen>
    <PreferenceScreen android:title="Параметры записи" >
        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="period_gpx"
            android:numeric="integer"
            android:summary="Миллисекунды"
            android:title="Период опроса GPS" android:defaultValue="0">
        </EditTextPreference>
        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="distance_gpx"
            android:numeric="integer"
            android:summary="Метры"
            android:title="Дистанция опроса GPS" android:defaultValue="0">
        </EditTextPreference>
        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="speedbearing_gpx"
          
            android:summary="километров в час"
            android:title="Скорость учета курса" android:defaultValue="0"/>
        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="bearing_gpx"
            android:numeric="integer"
            android:summary="Градусы"
            android:title="Отклонение курса" android:defaultValue="2"/>
        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="hdop_gpx"
            android:numeric="integer"
            android:summary="Метры"
            android:title="Допустимая точность" android:defaultValue="50"/>
        
    </PreferenceScreen>
    <PreferenceScreen android:title="Оповещение" >
        <CheckBoxPreference
            android:key="vibrate"
            android:title="Вибрировать при потере интернета и GPS" android:defaultValue="false"/>

        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="vibratetime"
            android:numeric="integer"
            android:summary="Миллисекунды"
            android:title="Период вибрации" android:defaultValue="200"/>

        <CheckBoxPreference
            android:key="playsound"
            android:title="Издавать звуки при потере интернета и GPS" android:defaultValue="false"/>

        <EditTextPreference
            android:digits="0123456789"
            android:inputType="number"
            android:key="notifyperiod"
            android:numeric="integer"
            android:summary="Миллисекунды"
            android:title="Период определения недоступности GPS" android:defaultValue="60000"/>

        <CheckBoxPreference
            android:key="sendsound"
            android:title="Звук при отправке" android:defaultValue="false"/>
        <CheckBoxPreference android:key="usetts" android:title="Проговаривать скорость" android:defaultValue="false"/>
    </PreferenceScreen>
    <CheckBoxPreference android:key="im" android:title="Использовать обмен сообщениями" android:defaultValue="false"/>

</PreferenceScreen>